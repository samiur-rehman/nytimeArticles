{
  "extends": ["airbnb", "airbnb/hooks"],
  "env": {
    "browser": true,
    "es2021": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "import/prefer-default-export": "off",
    "react/react-in-jsx-scope": "off",
    "max-len": ["error", { "code": 160 }],
    "react/require-default-props": "off",
    "no-console": "off"
  }
}
